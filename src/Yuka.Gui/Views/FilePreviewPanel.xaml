<UserControl x:Class="Yuka.Gui.Views.FilePreviewPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:Yuka.Gui.Views"
             xmlns:vm="clr-namespace:Yuka.Gui.ViewModels"
             xmlns:gui="clr-namespace:Yuka.Gui"
             xmlns:preview="clr-namespace:Yuka.Gui.Views.Preview"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <!-- Select fitting content template for currently selected file -->
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm:YukaScriptViewModel}">
            <TextBlock>SCRIPT PREVIEW</TextBlock>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:YukaGraphicViewModel}">
            <preview:YukaGraphicPreview/>
        </DataTemplate>
    </UserControl.Resources>
    <ContentControl Content="{Binding}"/>
</UserControl>
